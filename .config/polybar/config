[module/cmus]
type = custom/script
exec-if = pgrep -x cmus
exec = ~/.config/polybar/scripts/cmus
click-left = cmus-remote --pause &
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%
interval = 1
format-background = ${colors.rdL}

[module/date]
type = custom/script
exec = date '+ ÔÅ≥ %B %d (%a) ÔÄó %R '
